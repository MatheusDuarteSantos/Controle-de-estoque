//nova página php
<? include ("conexao.php"); ?>
<?php

$pegaId_cliente - $_POST['id_cliente'];
$pegaId_produto = $_POST['id_produto'];

$query = "update pedido set id_cliente='$pegaId_cliente', id_produto='$pegaId_produto' where = $pegaId_cliente";


$ok = mysqli_query($query, $conexao);

if($ok) {
	echo "Pedido Alterado com Sucesso.";
} else {
	echo "Erro ao Alterar Pedido.";
}

mysqli_close();

