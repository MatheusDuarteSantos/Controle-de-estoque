//nova página php
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8"/>
	<title>Controle de Estoque</title>
	<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

	<?
	$pegaId_cliente = $_POST['id_cliente'];

	$query = "select * from cliente where id_cliente like '%$pegaId_cliente%'";

	$result = mysqli_query($query, $conexao)

	$ok = mysqli_query($query, $conexao);

	?>

	<div class="panel panel-default">
		<div class="panel-heading">Resultado da busca</div>

		<table class="table">
			<th>
				<tr>Id Cliente</tr>
				<tr>Id Produto</tr>
			</th>

			<? while ($user = mysqli_fetch_array($result)) { ?>
			<tr>
				<td><?= $user['id_cliente'] ?></td>
				<td><?= $user['id_produto'] ?></td>
			</tr>
			<?	
		}
		mysqli_close();
		?>
	</table>
</div>

</body>
</html>

//nova página php para aleração de dados
<!DOCTYPE html>
