	</div>

	<form action="alteraPedidos.php" method="post" class="navbar-form navbar-left">
		<div class="form-group">
			<input type="text" class="form-control" name="id_cliente" placeholder="ID Cliente">
			<input type="text" class="form-control" name="id_produto" placeholder="ID Produto">
		</div>
