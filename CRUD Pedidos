//nova página para conexão com o banco de dados
<?php

//conexão com o servidor de banco de dados
$bdServidor = '127.0.0.1';
$bdUsuario = 'admin';
$bdSenha = 'root';
$bdBanco = 'controledeestoque';
$conexao = mysqli_connect($bdServidor, $bdUsuario, $bdSenha, $bdBanco);

if (mysqli_connect_errno($conexao)) {
echo "Problemas para conectar no banco. Verifique os dados!";
die();

}

?>

//novapágina php para inserção de dados
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8"/>
	<title>Controle de Estoque</title>
	<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

	<div class="page-header">
		<h1>Inserir novo pedido</h1>
	</div>

	<form action="criarPedido.php" method="post" class="navbar-form navbar-left">
		<div class="form-group">
			<input type="text" class="form-control" name="id_produto" placeholder="Id Pproduto">
			<input type="text" class="form-control" name="id_cliente" placeholder="Id Cliente">
		</div>
		<button type="submit" class="btn btn-default">Enviar</button>
	</form>

</body>
</html>

//nova página php
<? include ("conexao.php"); ?>
<?php

$pegaId_produto = $_POST['id_produto'];
$pegaId_cliente = $_POST['id_cliente'];

$query = "insert into pedido(id_cliente, id_produto)";
$query .= "values('$pegaId_cliente', '$pegaId_produto')";

$ok = mysqli_query($query, $conexao);

if($ok) {
	echo "Pedido Inserido com Sucesso.";
} else {
	echo "Erro ao Inserir Pedido.";
}

mysqli_close();

