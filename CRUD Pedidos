//nova página php
<? include ("conexao.php"); ?>
<?php

$pegaId_cliente = $_POST['id_cliente'];

$query = "delete from pedido where = $pegaId_cliente";


$ok = mysqli_query($query, $conexao);

if($ok) {
	echo "Pedido Excluído com Sucesso.";
} else {
	echo "Erro ao Excluir Pedido.";
}

mysqli_close();
