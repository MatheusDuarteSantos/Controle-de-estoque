//nova página php
<? include ("conexao.php"); ?>
<?php

$pegaId - $_POST['id'];
$pegaNome = $_POST['nome'];
$pegaDescricao = $_POST['descricao'];
$pegaPreco = $_POST['preco'];

$query = "update cliente set nome='$pegaNome', email='$pegaEmail', telefone='$pegaTelefone' where = $pegaId";


$ok = mysqli_query($query, $conexao);

if($ok) {
	echo "Cliente Alterado com Sucesso.";
} else {
	echo "Erro ao Alterar Cliente.";
}

mysqli_close();

