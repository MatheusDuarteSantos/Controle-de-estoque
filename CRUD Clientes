//nova página php
<? include ("conexao.php"); ?>
<?php

$pegaId = $_POST['id'];

$query = "delete from cliente where = $pegaId";


$ok = mysqli_query($query, $conexao);

if($ok) {
	echo "Cliente Excluído com Sucesso.";
} else {
	echo "Erro ao Excluir Cliente.";
}

mysqli_close();
