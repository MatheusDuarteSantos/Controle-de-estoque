//nova página php para conexão com banco de dados
<?php

//conexão com o servidor de banco de dados
$bdServidor = '127.0.0.1';
$bdUsuario = 'admin';
$bdSenha = 'root';
$bdBanco = 'controledeestoque';
$conexao = mysqli_connect($bdServidor, $bdUsuario, $bdSenha, $bdBanco);

if (mysqli_connect_errno($conexao)) {
echo "Problemas para conectar no banco. Verifique os dados!";
die();

}

?>

//nova página php para inserção de dados
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8"/>
	<title>Controle de Estoque</title>
	<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

	<div class="page-header">
		<h1>Inserir novo cliente</h1>
	</div>

	<form action="criarCliente.php" method="post" class="navbar-form navbar-left">
		<div class="form-group">
			<input type="text" class="form-control" name="nome" placeholder="Nome">
			<input type="text" class="form-control" name="email" placeholder="Email">
			<input type="number" class="form-control" name="telefone" placeholder="Telefone">
		</div>
		<button type="submit" class="btn btn-default">Enviar</button>
	</form>

</body>
</html>

//nova página php
<? include ("conexao.php"); ?>
<?php

$pegaNome = $_POST['nome'];
$pegaEmail = $_POST['email'];
$pegaTelefone = $_POST['telefone'];

$query = "insert into cliente(nome, email, telefone)";
$query .= "values('$pegaNome', '$pegaEmail', '$pegaTelefone')";

$ok = mysqli_query($query, $conexao);

if($ok) {
	echo "Cliente Inserido com Sucesso.";
} else {
	echo "Erro ao Inserir Cliente.";
}

mysqli_close();

//nova página php para buscar dados
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8"/>
	<title>Controle de Estoque</title>
	<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

	<?
	$pegaNome = $_POST['nome'];

	$query = "select * from cliente where nome like '%$nome%'";

	$result = mysqli_query($query, $conexao)

	$ok = mysqli_query($query, $conexao);

	?>

	<div class="panel panel-default">
		<div class="panel-heading">Resultado da busca</div>

		<table class="table">
			<th>
				<tr>Id</tr>
				<tr>Nome</tr>
				<tr>Email</tr>
				<tr>Telefone</tr>
			</th>

			<? while ($user = mysqli_fetch_array($result)) { ?>
			<tr>
				<td><?= $user['id'] ?></td>
				<td><?= $user['nome'] ?></td>
				<td><?= $user['email'] ?></td>
				<td><?= $user['telefone'] ?></td>
			</tr>
			<?	
		}
		mysqli_close();
		?>
	</table>
</div>

</body>
</html>

